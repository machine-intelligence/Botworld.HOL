ifndef CAKEMLDIR
CAKEMLDIR = $(HOME)/cakeml
endif

INCLUDES = $(CAKEMLDIR)/semantics $(CAKEMLDIR)/compiler/parsing $(HOLDIR)/examples/formal-languages/context-free
THYFILES = $(patsubst %Script.sml,%Theory.uo,$(wildcard *.sml))
TARGETS = $(patsubst %.sml,%.uo,$(THYFILES))
all: $(TARGETS)
.PHONY: all

ifdef POLY
HOLHEAP = heap
EXTRA_CLEANS = $(HOLHEAP) $(HOLHEAP).o
BARE_THYS = $(CAKEMLDIR)/preamble $(CAKEMLDIR)/semantics/terminationTheory $(CAKEMLDIR)/compiler/parsing/fromSexpTheory
DEPS = $(patsubst %,%.uo,$(BARE_THYS))
$(HOLHEAP): $(DEPS)
	$(protect $(HOLDIR)/bin/buildheap) -o $(HOLHEAP) $(BARE_THYS)
endif
